        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الفصول الاربعة"
            android:textSize="40dp"
            android:background="@color/colorAccent"
            android:gravity="center" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$2500"
            android:textSize="40dp"
            android:background="@color/colorAccent"
            android:gravity="center"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/pizza_sesone"
            android:background="@color/colorAccent"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorAccent"
            android:gravity="center">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="increment_seasone"
                android:text="+"
                android:textSize="35dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:padding="10dp"
                android:id="@+id/zero"
                android:textSize="35dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:onClick="decrement_seasone"
                android:textSize="35dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="مرغريتا"
            android:textSize="40dp"
            android:background="#fbc531"
            android:gravity="center" />
